<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude('spec')
    ->exclude('resources')
    ->in(__DIR__)
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony' => true,
        'array_syntax' => ['syntax' => 'short'],
        'yoda_style' => false,
        'self_accessor' => false,
    ])
    ->setFinder($finder)
;
